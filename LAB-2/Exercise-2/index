<!DOCTYPE html>
<html>
<head>
    <title>Audio and Video</title>
</head>
<body>

<h2>Audio Player</h2>
<audio id="audio" controls>
    <source src="audio.mp3" type="audio/mp3">
</audio>
<p>Audio Time: <span id="audioTime">0</span> sec</p>

<h2>Video Player</h2>
<video id="video" width="400" controls>
    <source src="video.mp4" type="video/mp4">
</video>
<p>Video Time: <span id="videoTime">0</span> sec</p>

<script>
    const audio = document.getElementById("audio");
    const video = document.getElementById("video");

    audio.addEventListener("timeupdate", () => {
        document.getElementById("audioTime").innerText = audio.currentTime.toFixed(1);
    });

    video.addEventListener("timeupdate", () => {
        document.getElementById("videoTime").innerText = video.currentTime.toFixed(1);
    });
</script>

</body>
</html>
